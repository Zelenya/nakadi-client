{-# LANGUAGE DuplicateRecordFields #-}
{-# LANGUAGE FlexibleContexts      #-}
{-# LANGUAGE ScopedTypeVariables   #-}

module Network.Nakadi.Connection.Retry where

import           ClassyPrelude

import           Network.Nakadi
import           Test.Tasty
import           Test.Tasty.HUnit

testRegistry :: Config -> TestTree
testRegistry conf = testGroup "Connection.Retry"
  [ testCase "SimpleRetry" (testSimpleRetry conf)
  ]

testSimpleRetry :: Config -> Assertion
testSimpleRetry conf =
  void $ registryPartitionStrategies conf

